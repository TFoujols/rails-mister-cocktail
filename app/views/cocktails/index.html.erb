<div class="wrapper">
  <div class="black container">
    <h2>Favourites</h2> <hr>


    <div class="row">

    <% @cocktails.each do |cocktail| %>
     <div class="col-xs-12 col-sm-4">
        <div class="cocktail">
            <div class="cocktail-img" style='background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url("https://source.unsplash.com/350x350/?cocktail")' alt="">
              <div class="cocktail-main-name"> <%= cocktail.name %>
                <ul class="ingredient-list">
                  <% cocktail.doses.each do |dose| %>
                    <li> <%= dose.ingredient.name %> : <%= dose.description %> </li>
                  <% end %>
                </ul>
              </div>
          </div>

          <div class="cocktail-infos">
            <p class="cocktail-type">Lounge</p>
            <p class="cocktail-name"><%= cocktail.name %></p>
          </div>
        </div>
    </div>
    <% end %>


  </div>

  </div>
</div>



